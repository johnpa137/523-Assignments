<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main.xml (layout scaffold) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Add color buttons (e.g., Black, Red, Blue) -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Black"
            android:backgroundTint="#000"
            android:id="@+id/blackBrushButton"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red"
            android:backgroundTint="#F00"
            android:id="@+id/redBrushButton"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:backgroundTint="#00F"
            android:id="@+id/blueBrushButton"
            />
        <!-- Add Clear button -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/clearButton"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Detect"
        android:id="@+id/detectButton"
        />

    <!-- Add your DrawingView as the canvas area -->
    <com.example.icte5.DrawingView
        android:id="@+id/drawingView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

    />
</LinearLayout>